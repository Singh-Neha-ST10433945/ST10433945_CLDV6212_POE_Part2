@model IEnumerable<ABCRetailers.Models.Product>
@{
    ViewData["Title"] = "Products";
}

<style>
    /* === Light Blue & White Theme (User-Friendly & Accessible) === */
    body {
        background: linear-gradient(135deg, #e8f6ff 0%, #c9e9ff 100%);
        color: #1f3b4d;
        font-family: 'Segoe UI', Roboto, sans-serif;
        min-height: 100vh;
    }

    h2 {
        color: #1e6fb8;
        font-weight: 600;
        text-shadow: 0 0 10px rgba(99, 179, 237, 0.25);
    }

    /* === Product Grid === */
    .product-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(260px, 1fr));
        gap: 1.5rem;
        margin-top: 2rem;
        animation: fadeInUp 0.5s ease;
    }

    /* === Card Styling === */
    .card {
        background: #ffffff;
        border: 1px solid #b9dcf5;
        border-radius: 16px;
        box-shadow: 0 6px 18px rgba(0, 64, 128, 0.1);
        overflow: hidden;
        transition: all 0.3s ease;
        position: relative;
    }

        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 12px 32px rgba(99, 179, 237, 0.25);
            border-color: #7ec3f8;
        }

        .card img {
            width: 100%;
            height: 180px;
            object-fit: cover;
            border-bottom: 1px solid #b9dcf5;
        }

    /* === Card Body === */
    .card-body {
        padding: 1rem 1.2rem;
    }

    .card-title {
        font-weight: 600;
        color: #1e6fb8;
        font-size: 1.1rem;
        margin-bottom: 0.5rem;
    }

    .card-text {
        color: #48677e;
        font-size: 0.9rem;
        min-height: 50px;
    }

    .price {
        color: #0a7e9c;
        font-weight: 600;
        text-shadow: 0 0 8px rgba(10, 126, 156, 0.2);
    }

    /* === Badges === */
    .badge {
        padding: 0.4rem 0.6rem;
        border-radius: 8px;
        font-size: 0.8rem;
        font-weight: 600;
        margin-left: 0.4rem;
        display: inline-block;
    }

    .bg-success {
        background: linear-gradient(135deg, #a7f3d0, #6ee7b7);
        color: #064e3b;
    }

    .bg-warning {
        background: linear-gradient(135deg, #fff4b8, #ffe082);
        color: #5d4a00;
    }

    .bg-danger {
        background: linear-gradient(135deg, #fecaca, #f87171);
        color: #5a0f0f;
    }

    /* === Button Group === */
    .btn-group {
        display: flex;
        justify-content: space-between;
        margin-top: 1rem;
    }

    /* === Buttons === */
    .btn {
        border-radius: 8px;
        padding: 0.4rem 0.8rem;
        font-size: 0.85rem;
        transition: all 0.3s ease;
        font-weight: 500;
    }

    .btn-outline-primary {
        border: 1px solid #1e90ff;
        color: #1e6fb8;
        background: #f0f8ff;
    }

        .btn-outline-primary:hover {
            background: linear-gradient(90deg, #63b3ed, #1e90ff);
            color: white;
            box-shadow: 0 4px 12px rgba(99, 179, 237, 0.3);
        }

    .btn-outline-danger {
        border: 1px solid #f87171;
        color: #b22222;
        background: #fff5f5;
    }

        .btn-outline-danger:hover {
            background: linear-gradient(90deg, #f87171, #ff6b6b);
            color: white;
            box-shadow: 0 4px 12px rgba(255, 107, 107, 0.3);
        }

    /* === Alert Info === */
    .alert-info {
        background: linear-gradient(135deg, rgba(173, 216, 230, 0.4), rgba(224, 247, 255, 0.6));
        border: 1px solid #a2d2ff;
        border-left: 4px solid #1e90ff;
        border-radius: 12px;
        color: #1f3b4d;
        margin-top: 2rem;
        padding: 1rem;
        box-shadow: 0 4px 16px rgba(99, 179, 237, 0.15);
    }

    /* === Fade-In Animation === */
    @@keyframes fadeInUp {
        from

    {
        opacity: 0;
        transform: translateY(20px);
    }

    to {
        opacity: 1;
        transform: translateY(0);
    }

    }
</style>


<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4 page-header">
        <h2><i class="fas fa-box me-2"></i> Products</h2>
        <a asp-action="Create" class="btn btn-primary shadow-sm">
            <i class="fas fa-plus me-1"></i> Add New Product
        </a>
    </div>

    @if (Model != null && Model.Any())
    {
        <div class="product-grid">
            @foreach (var product in Model)
            {
                var shortId = !string.IsNullOrWhiteSpace(product?.Id)
                ? (product.Id.Length > 8 ? product.Id[..8] + "…" : product.Id)
                : "-";
                var desc = product?.Description ?? "";
                var stock = product?.StockAvailable ?? 0;
                var badge = stock > 10 ? "success" : stock > 0 ? "warning" : "danger";

                <div class="card">
                    @if (!string.IsNullOrWhiteSpace(product?.ImageUrl))
                    {
                        <img src="@product.ImageUrl" alt="@product.ProductName" />
                    }
                    else
                    {
                        <img src="https://via.placeholder.com/400x180?text=No+Image" alt="No Image" />
                    }

                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center">
                            <h5 class="card-title">@product?.ProductName</h5>
                            <span class="badge bg-@badge">@stock</span>
                        </div>

                        <p class="card-text">@((desc.Length > 70 ? desc.Substring(0, 70) + "…" : desc))</p>

                        <p class="price mb-0">@product?.Price.ToString("C")</p>

                        <div class="btn-group">
                            <a asp-action="Edit" asp-route-id="@product?.Id" class="btn btn-outline-primary">
                                <i class="fas fa-edit"></i> Edit
                            </a>
                            <button type="button" class="btn btn-outline-danger"
                                    onclick="confirmDelete('@product?.Id','@product?.ProductName')">
                                <i class="fas fa-trash"></i> Delete
                            </button>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="alert alert-info">
            <i class="fas fa-info-circle me-2"></i> No products found.
            <a asp-action="Create" class="alert-link text-decoration-underline text-primary">Add your first product</a>!
        </div>
    }
</div>

<!-- Delete Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header border-bottom">
                <h5 class="modal-title text-danger"><i class="fas fa-exclamation-triangle me-2"></i> Confirm Delete</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                Are you sure you want to delete <strong id="productName"></strong>?
            </div>
            <div class="modal-footer border-top">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <form id="deleteForm" method="post" style="display:inline;">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-danger">Delete</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function confirmDelete(productId, productName) {
            document.getElementById('productName').textContent = productName || '';
            document.getElementById('deleteForm').action = '@Url.Action("Delete", "Product")/' + encodeURIComponent(productId || '');
            new bootstrap.Modal(document.getElementById('deleteModal')).show();
        }
    </script>
}